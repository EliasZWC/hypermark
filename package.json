{
  "name": "hypermark",
  "version": "1.1.0",
  "description": "A software that converts Markdown to HTML",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/EliasZWC/hypermark",
  "keywords": [
    "Hypermark",
    "Markdown",
    "HTML"
  ],
  "author": "Elias Chang",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.elias.hypermark",
    "productName": "Hypermark",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "src/assets/images/logo.png",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "electronDist": "E:\\CS\\Electron\\dependencies\\electron-v33.0.1-win32-x64"
  }
}